<Window x:Class="ReportMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReportMaker"
        mc:Ignorable="d"
        Title="ReportMaker5000" Height="350" Width="600" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.7,0.8" StartPoint="0.7,-0.1">
                <GradientStop Color="CornflowerBlue" Offset="0" />
                <GradientStop Color="Ivory" Offset="0.5" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Name="NowyButton" Width="200" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Podaj dane ręcznie" Click="NowyButton_Click"/>
        <Button Name="WczytajButton" Width="200" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Wczytaj dane z pliku"
                Grid.Column="1" Click="WczytajButton_Click"/>
    </Grid>
</Window>